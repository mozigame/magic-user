        <if test="registerTime != null ">
            #{registerTime},
        </if>
        <if test="status != null ">
            #{status,jdbcType=TINYINT,typeHandler=com.magic.user.util.EnumKeyTypeHandler},
        </if>
        <if test="gender != null ">
            #{gender,jdbcType=TINYINT,typeHandler=com.magic.user.util.EnumKeyTypeHandler},
